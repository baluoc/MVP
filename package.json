{
  "name": "mvp",
  "version": "1.0.0",
  "workspaces": [
    "mcp-server"
  ],
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json && npm run build:ui",
    "build:ui": "node scripts/compose-ui.js && node scripts/build-addon-ui.js",
    "start": "node dist/src/index.js",
    "start:test": "node dist/src/index.js --mock",
    "smoke": "ts-node-dev --transpile-only scripts/ws-smoke.ts",
    "test:fast": "npm run build && node --test --test-timeout=5000 tests/unit/*.test.js tests/unit/*.test.mjs",
    "test:e2e": "npx playwright test",
    "test:ci": "npm run test:fast && npx playwright test --max-failures=1",
    "test:unit": "npm run test:fast",
    "test:integration": "npm run build && node --test tests/integration/replay.test.js",
    "replay": "npm run build && node scripts/replay-events.js",
    "screens": "npx playwright test",
    "e2e:screens": "npx playwright test tests/e2e/screens.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baluoc/MVP.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/baluoc/MVP/issues"
  },
  "homepage": "https://github.com/baluoc/MVP#readme",
  "dependencies": {
    "express": "^5.2.1",
    "obs-websocket-js": "^5.0.7",
    "tiktok-live-connector": "^2.1.1-beta1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "playwright": "^1.57.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
